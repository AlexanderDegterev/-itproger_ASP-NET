<h1> все автомобили </h1>
 
<h3>@Model.currCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var car in Model.allCars) /*Глобальный объект* см CarsController var cars = _allCars.GetCars;*/
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@car.Img" alt="@car.Name" />
                <h2>@car.Name </h2>
                <p>@car.ShortDesc</p>
                <p>Цена: @car.Price.ToString("c")</p>  /*в денежный формат*/
                <p><a class="btn btn-warning" href="#">Подробнее</a></p>
            </div>
        }
    }
</div>

